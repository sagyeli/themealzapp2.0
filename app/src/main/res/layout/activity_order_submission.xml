<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="SplashActivity"
    android:background="@drawable/main_background" >

    <TextView
        android:id="@+id/main_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_order_submission_title"
        android:layout_gravity="center"
        android:textColor="@color/default_text_color"
        android:textSize="27dp"
        android:paddingTop="40dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:layout_below="@+id/main_title"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:layout_above="@+id/submit_button"
        android:background="@color/actionbar_background_semi_transparent"
        android:padding="20dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/order_submission_restaurant_logo"
            android:src="@drawable/splash_screen_logo"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/default_text_color"
            android:textSize="27dp"
            android:textStyle="bold"
            android:id="@+id/order_submission_restaurant_name"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/default_text_color"
            android:textSize="18dp"
            android:textStyle="bold"
            android:id="@+id/order_submission_info"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_weight="0.33"
            android:gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_submission_price_label"
                android:textColor="@color/default_text_color"
                android:textSize="18dp"
                android:textStyle="bold"
                android:id="@+id/order_submission_price_label"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/default_text_color"
                android:textSize="24dp"
                android:textStyle="bold"
                android:id="@+id/order_submission_price_value"
                android:layout_gravity="left"/>

        </LinearLayout>

